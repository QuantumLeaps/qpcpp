     <action>for (uint8_t n = 0; n &lt; GAME_MINES_MAX; ++n) {
   m_mine1_pool[n]-&gt;init(m_prio); // take the initial tran. for Mine1
   m_mine2_pool[n]-&gt;init(m_prio); // take the initial tran. for Mine2
}

